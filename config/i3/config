###########################
### Reboot and Poweroff ###
###########################

bindsym $mod+Shift+r restart
bindsym $mod+Ctrl+r --no-startup-id exec terminology -e 'killall redshift && killall goldendict && killall clipit'
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# Set shut down, restart and locking features
bindsym $mod+0 mode "$mode_system"
set $mode_system (l)ock, (e)xit, switch (u)ser, (r)eboot, (s)hutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id mplayer -noconsolecontrols -really-quiet 2>/dev/null ~/.scripts/i3/exit2.mp3 && sleep .5 && i3exit lock mode "default"
    bindsym u exec --no-startup-id mplayer -noconsolecontrols -really-quiet 2>/dev/null ~/.scripts/i3/exit2.mp3 && sleep .5 && i3exit switch_user mode "default"
    bindsym e exec --no-startup-id mplayer -noconsolecontrols -really-quiet 2>/dev/null ~/.scripts/i3/exit2.mp3 && sleep .5 && mpd --kill && i3exit logout mode "default"
    bindsym r exec --no-startup-id mplayer -noconsolecontrols -really-quiet 2>/dev/null ~/.scripts/i3/Shutdown.ogg && sleep .5 && mpd --kill && i3exit reboot mode "default"
    bindsym s exec --no-startup-id mplayer -noconsolecontrols -really-quiet 2>/dev/null ~/.scripts/i3/Shutdown.ogg && sleep .5 && mpd --kill && i3exit shutdown mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

